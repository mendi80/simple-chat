    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "PHP Launch currently open script",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "A:/Programs/xampp/php/php.exe",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
			"port": 9222,
            "url": "http://localhost/3/index.html",
            "webRoot": "${workspaceRoot}/3/",
        }
    ]
}